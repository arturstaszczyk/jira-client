<Window x:Class="JiraAssistant.Dialogs.TextualPreview"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JiraAssistant.Dialogs"
        mc:Ignorable="d"
        Title="Preview" Height="300" Width="300"
        Icon="/Assets/Icons/ApplicationIcon.png">
   <Grid>
      <Grid.RowDefinitions>
         <RowDefinition Height="*" />
         <RowDefinition Height="Auto" />
      </Grid.RowDefinitions>

      <TextBox Text="{Binding Text, Mode=OneWay}" IsReadOnly="{Binding ReadOnly, Mode=OneWay}" AcceptsReturn="True" TextWrapping="Wrap" />

      <Button Grid.Row="1" Content="Ok" Margin="5" HorizontalAlignment="Right" Width="60" Click="ConfirmClick"/>
   </Grid>
</Window>
