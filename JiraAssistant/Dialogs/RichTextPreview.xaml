<Window xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"  x:Class="JiraAssistant.Dialogs.RichTextPreview"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JiraAssistant.Dialogs"
        mc:Ignorable="d" Icon="/Assets/Icons/ApplicationIcon.png"
        Title="Preview" Height="400" Width="300">
   <Grid>
      <Grid.RowDefinitions>
         <RowDefinition Height="*" />
         <RowDefinition Height="Auto" />
      </Grid.RowDefinitions>

      <telerik:RadRichTextBox x:Name="textBox" />

      <Button Grid.Row="1" Content="Ok" Margin="5" HorizontalAlignment="Right" Width="60" Click="ConfirmClick" />
   </Grid>
</Window>
