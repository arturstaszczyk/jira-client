<Window x:Class="JiraAssistant.Dialogs.SelectFilterDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JiraAssistant.Dialogs"
        mc:Ignorable="d"
        Title="JIRA Assistant" Height="80" Width="300">
   <Grid>
      <Grid.RowDefinitions>
         <RowDefinition Height="Auto" />
         <RowDefinition Height="*" />
      </Grid.RowDefinitions>
      <TextBlock Text="Select filter to load then 'Enter'" />
      <ComboBox VerticalAlignment="Center" Grid.Row="1" ItemsSource="{Binding Options}" SelectedItem="{Binding FilterName}" >
         <ComboBox.InputBindings>
            <KeyBinding Command="{Binding AcceptCommand}" Key="Return"/>
         </ComboBox.InputBindings>
      </ComboBox>
   </Grid>
</Window>
