<UserControl xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"  x:Class="JiraAssistant.Pages.MainMenuPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:JiraAssistant.Pages"
             mc:Ignorable="d" d:DesignHeight="300" d:DesignWidth="300"
             Background="White"
             DataContext="{Binding Source={StaticResource Locator}, Path=MainMenu}">
   <telerik:RadBusyIndicator IsBusy="{Binding IsBusy}">
      <telerik:RadBusyIndicator.BusyContent>
         <TextBlock Text="{Binding BusyMessage}" />
      </telerik:RadBusyIndicator.BusyContent>
      <Grid>
         <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
         </Grid.RowDefinitions>
         
         <TextBlock Text="Choose board you want to analyse" TextAlignment="Center" Margin="10"/>

         <ItemsControl Grid.Row="1" ItemsSource="{Binding Boards}" Margin="10">
            <ItemsControl.ItemsPanel>
               <ItemsPanelTemplate>
                  <WrapPanel />
               </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
               <DataTemplate>
                  <Button Command="{Binding DataContext.OpenBoardCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="{Binding .}"
                          Width="100" Height="50" HorizontalContentAlignment="Center"
                          VerticalContentAlignment="Center" Margin="5">
                     <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Name}"/>
                        <TextBlock Text=" ("/>
                        <TextBlock Text="{Binding Type}"/>
                        <TextBlock Text=")"/>
                     </StackPanel>
                  </Button>
               </DataTemplate>
            </ItemsControl.ItemTemplate>
         </ItemsControl>
      </Grid>
   </telerik:RadBusyIndicator>
</UserControl>
