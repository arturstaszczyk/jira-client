<UserControl x:Class="JiraManager.Controls.Fields.Search.SearchByIssueTypeFieldControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:JiraManager.Controls.Fields.Search"
             mc:Ignorable="d" 
             Height="33" d:DesignWidth="300">
   <Grid>
      <Grid.RowDefinitions>
         <RowDefinition Height="Auto"/>
      </Grid.RowDefinitions>
      <Grid.ColumnDefinitions>
         <ColumnDefinition Width="Auto"/>
         <ColumnDefinition Width="*"/>
      </Grid.ColumnDefinitions>
      <TextBlock Grid.Row="0" Grid.Column="0" Text="Select type of issue:" Margin="5"/>
      <ComboBox Grid.Row="0" Grid.Column="1" ItemsSource="{Binding IssueTypesList}" SelectedItem="{Binding SelectedIssueType, Mode=TwoWay}"
                      Margin="5" DisplayMemberPath="Name"/>
   </Grid>
</UserControl>
