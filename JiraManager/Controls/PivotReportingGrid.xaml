<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Yakuza.JiraClient.Controls"
             xmlns:pivot="http://schemas.telerik.com/2008/xaml/presentation/pivot" x:Class="Yakuza.JiraClient.Controls.PivotReportingGrid"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             DataContext="{Binding Source={StaticResource Locator}, Path=Pivot}">
   <Grid>
      <pivot:RadPivotGrid DataProvider="{Binding DataSource}"/>
   </Grid>
</UserControl>
