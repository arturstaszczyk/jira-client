<UserControl xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
             x:Class="Yakuza.JiraClient.Plugins.Analysis.Charts.EngagementChartProperties"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Yakuza.JiraClient.Plugins.Analysis.Charts"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
   <StackPanel VerticalAlignment="Top">
      <TextBlock Text="Engagement base:" Margin="5"/>
      <ComboBox ItemsSource="{Binding AvailableBases}" SelectedItem="{Binding SelectedBase}" DisplayMemberPath="Name" Margin="5"/>
      
      <TextBlock Text="Engagement criteria:" Margin="5"/>
      <ComboBox ItemsSource="{Binding AvailableCriterias}" SelectedItem="{Binding SelectedCriteria}" DisplayMemberPath="Name" Margin="5"/>
   </StackPanel>
</UserControl>
